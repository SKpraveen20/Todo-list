<%- include('header') -%>
    <div class='box' id='heading'>
    <h1><%= day %></h1>
  </div>
  <div class='box'>
      <% items.forEach(function(it){ %>
       <form action="/delete" method='post'>
          <div class='item'>
            <input type='checkbox' name='checkBox' value="<%= it._id %>" onChange="this.form.submit()">
            <p> <%= it.name %></p>
           </div>
        </form>
      <%})%>
    <form class='' action='/' method='post'>
      <input type='text' name='listItem' autocomplete='off' placeholder='newtask'>
      <button type='submit' name='button'>+</button>
    </form>
  </div>
<%- include('footer') -%>
